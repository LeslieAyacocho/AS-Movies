<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardMovieCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="5dp"
        app:cardBackgroundColor="@color/black"
        app:strokeColor="@color/teal_80ffdb">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgViewMovieCast"
                android:layout_width="108dp"
                android:layout_height="131dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@color/purple_6930c3" />

            <TextView
                android:id="@+id/textMovieCastName"
                android:layout_width="156dp"
                android:layout_height="46dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:text="Name"
                android:textColor="@color/teal_80ffdb"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imgViewMovieCast"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>